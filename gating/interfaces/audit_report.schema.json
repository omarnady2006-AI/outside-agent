{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "copy_id",
    "decision",
    "reason_codes",
    "metrics",
    "transform_summary",
    "timestamp"
  ],
  "properties": {
    "copy_id": {
      "type": "string"
    },
    "decision": {
      "type": "string",
      "enum": [
        "ACCEPT",
        "REJECT",
        "QUARANTINE"
      ]
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metrics": {
      "type": "object"
    },
    "transform_summary": {
      "type": "object"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}